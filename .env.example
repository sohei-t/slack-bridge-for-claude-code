# Slack Bridge for Claude Code - Environment Variables
# Copy this file to .env and fill in your values.

# Enable/disable Slack notifications
SLACK_NOTIFY_ENABLED=true

# Bot User OAuth Token (from Slack App → OAuth & Permissions)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App-Level Token for Socket Mode (from Slack App → Basic Information → App-Level Tokens)
SLACK_APP_TOKEN=xapp-your-app-token

# Your Slack User ID (Profile → ... → Copy member ID)
# Security: only this user can send commands to Claude Code
SLACK_ALLOWED_USER=U0000000000

# tmux session name (default: claude)
TMUX_SESSION_NAME=claude
